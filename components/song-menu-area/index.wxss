/* components/song-menu-area/index.wxss */

.menu-list {
  width: 100vw;
  position: relative;
  left: -20rpx;
  white-space: nowrap;
}

.menu-item {
  display: inline-block;
  /* 某些手机上面会出现对不齐的情况 */
  vertical-align: top;
  width: 220rpx;
  margin-left: 20rpx;
}

.menu-item:last-of-type {
  margin-right: 20rpx;
}