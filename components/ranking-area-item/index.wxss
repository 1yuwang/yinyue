/* components/ranking-area-item/index.wxss */
.item {
  display: flex;
  height: 220rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.info {
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: #eee;
}

.name {
  font-size: 34rpx;
}

.song-name {
  font-size: 24rpx;
  width: 55vw;
  margin-top: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.song-name text {
  color: #999;
}

.image {
  position: relative;
  width: 220rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  overflow: hidden;
}

.image image {
  width: 100%;
  vertical-align: middle;
}

.play-count {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0, 0, 0, .5);
}